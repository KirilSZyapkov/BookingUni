<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>{{title}}</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>

    <div id="container">

        <nav>

            <div class="left-container">
                <ul>
                    <li><a href="/hotels">Home</a></li>
                    {{#if isLog}}
                    {{else}}
                    <li><a href="/auth/login">Login</a></li>
                    <li><a href="/auth/register">Register</a></li>
                    {{/if}}
                </ul>
            </div>
            <div class="right-container">
                {{#if isLog}}
                <li><a href="/hotels/create">Add +</a></li>
                <a href="/user" class="log-out">{{hotels.name}}</a>
                <a href="/auth/logout" class="log-out">Logout</a>
                {{/if}}
            </div>
        </nav>
        {{#if errors}}
        <div class="notification errorBox">
            {{#each errors}}
            <p><span>{{this}}</span></p>
            {{/each}}
        </div>
        {{/if}}
        {{{body}}}
        <footer>@SoftUni - JS Back-end - BookingUni 2020</footer>
    </div>

</body>

</html>

